<div class="col-xl-4 col-lg-4 col-md-6 col-10" style="margin: auto; background-color: #F7F7F7; border-radius: 6px;">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h1>Post</h1>

    <div>
      <%= form.label :title, style: "display: block", class: "form-label pt-2" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :description, style: "display: block", class: "form-label pt-2" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>

    <div>
      <%= form.label :keywords, style: "display: block", class: "form-label pt-2" %>
      <%= form.text_field :keywords, class: "form-control" %>
    </div>

    <div>
      <%= form.submit class: "btn btn-primary col-12 mt-4" %>
    </div>
  <% end %>
</div>
